{
  "compilerOptions": {
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es2015", "dom", "dom.iterable"],
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
